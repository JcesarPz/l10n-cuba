<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Brand search view -->
    <record id="product_brand_search_form_view" model="ir.ui.view">
        <field name="name">product.brand.search.form</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <search string="Product Brand">
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- Brand product action view  -->
    <record id="action_product_brand_kanban" model="ir.actions.act_window">
        <field name="name">Product Brand</field>
        <field name="res_model">product.brand</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
        <field name="domain">[('brand_product_ids', 'in', active_id)]</field>
    </record>

    <!-- Brand form view -->
    <record id="view_product_brand_form" model="ir.ui.view">
        <field name="name">product.brand.form</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <form string="Product Brand">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="get_brand_product" class="oe_stat_button"
                            icon="fa-th-list" type="object" >
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="products_count"/></span>
                                <span class="o_stat_text"> Products</span>
                            </div>
                        </button>
                    </div>
                    <field class="oe_avatar" name="logo" widget="image"/>
                    <div class="oe_title">
                        <h5>Brand Name</h5>
                        <h1>
                            <field name="name" placeholder="Brand Name"/>
                        </h1>
                        <div name="options">
                            <div>
                                <field name="active"/>
                                <label for="active"/>
                            </div>
                        </div>
                    </div>
                    <group>
                        <notebook>
                            <page name="description" string="Website Description">
                                <group string="Description">
                                    <field name="brand_description"/>
                                </group>
                            </page>
                            <page name="Product" string="Products">
                                <field name="brand_product_ids"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Brand tree view -->
    <record id="view_product_brand_tree" model="ir.ui.view">
        <field name="name">product.brand.tree</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <tree string="Brands">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>


    <!-- Brand action -->
    <record id="action_product_brand" model="ir.actions.act_window">
        <field name="name">Brand</field>
        <field name="res_model">product.brand</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <!-- Brand menu -->
    <menuitem id="menu_product_brand" name="Product Brands" action="action_product_brand" parent="stock.menu_stock_inventory_control" sequence="4"/>
</odoo>