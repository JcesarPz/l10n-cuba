  <record id="product_template_weight_brute_view" model="ir.ui.view">
            <field name="name">weightbrute.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product_arancel.product_template_form_arancel_add"/>
            <field name="arch" type="xml">
                <data>
                     <group name="group_lots_and_weight" position="replace">
                         <group string="Logistics" name="group_lots_and_weight" attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}">
                            <label for="weight"/>
                            <div class="o_row" name="weight">
                                <field name="weight"/>
                                <span>kg</span>
                            </div>
                             <label for="weight_brute"/>
                            <div class="o_row" name="weight brute">
                                <field name="weight_brute"/>
                                <span>kg</span>
                            </div>
                            <label for="volume"/>
                            <div class="o_row" name="volume">
                                <field name="volume" string="Volume"/>
                                <span>m³</span>
                            </div>
                              <field name="responsible_id"/>
                        </group>

                     </group>

                </data>
            </field>
  </record>

    <record id="product_variant_weight_brute_edit_view" model="ir.ui.view">
            <field name="name">product.product.view.form.weight_brute</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_lots_and_weight']" position="replace">
                            <group string="Logistics" name="group_lots_and_weight" attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}">
                                <label for="weight"/>
                                <div class="o_row" name="weight">
                                    <field name="weight"/>
                                    <span>kg</span>
                                </div>
                                <label for="weight_brute"/>
                                <div class="o_row" name="weight brute">
                                    <field name="weight_brute"/>
                                    <span>kg</span>
                                </div>
                                <label for="volume"/>
                                    <div class="o_row" name="volume">
                                    <field name="volume" string="Volume"/>
                                    <span>m³</span>
                                </div>
                            </group>
                </xpath>

            </field>
        </record>
</odoo>






