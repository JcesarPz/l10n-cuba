<odoo>
    <data>
        <template id="stock_inventory_valuation_report_layout">
            <!-- Multicompany -->
            <t t-if="not o and doc">
                <t t-set="o" t-value="doc"/>
            </t>
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>
            <t t-call="l10n_cu_agr_stock.stock_inventory_valuation_report_layout_custom">
                <t t-raw ="0" />
            </t>
        </template>

        <template id="stock_inventory_valuation_report_layout_custom">

            <div class="article">
                <t t-raw="0"/>
            </div>


            <div class="footer">
                <div class="text-center" style="border-top: 1px solid black;">
                    <div class="text-muted">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo>
