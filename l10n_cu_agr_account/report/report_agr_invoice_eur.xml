<odoo>
    <data>
        <template id="report_agr_invoice_eur">
            <t t-set="Tasa" t-value="1.1736"/>
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="l10n_cu_agr_account.agr_invoice_report_layout">
                        <t t-if="o and 'company_id' in o">
                            <t t-set="company" t-value="o.company_id.sudo()"/>
                        </t>
                        <t t-if="not o or not 'company_id' in o">
                            <t t-set="company" t-value="res_company"/>
                        </t>
                         <div class="header">
                            <div class="row">
                                <div class="col-1 mb4">
                                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="max-height: 45px;"/>
                                </div>
                                <div class="col-2 text-left">
                                <span>Depósito: </span><span>_________________________</span>
                                </div>
                                <div class="col-6 text-left">
                                    <span>5ta. Ave. No. 18407 e/ 184 y 186, Siboney, Playa, La Habana, Cuba<br/> Teléfonos: 72736612, 72736352<br/> Sitio Web: https: //www.dominio.com</span>
                                </div>
                                 <div class="col-2 text-left">
                                    <h3>
                                        <span t-if="o.move_type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">
                                            Factura No.*
                                        </span>
                                        <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Factura Borrador
                                        </span>

                                        <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Factura Cancelada
                                        </span>

                                        <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                                        <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                                        <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                                        <!-- <span t-field="o.number"/> -->
                                    </h3>
                                </div>
                                <div class="col-1 text-left" t-if="o.invoice_date">
                                    <strong>Fecha:</strong> <span t-field="o.invoice_date"/>
                                </div>
                            </div>

                            <div t-if="company.logo or company.report_header" class="row zero_min_height">
                                <div class="col-xs-12">
                                    <div style="border-bottom: 1px solid black;"/>
                                </div>
                            </div>
                        </div>
                        <div class="page">
                            <div class="row mt32 mb32">
                                <div class="col-3 ">
                                    <strong>No. Contrato:</strong>
                                    <p t-field="o.contract_number"/>
                                    <br/>
                                    <br/>
                                    <strong>No. Bultos:</strong>
                                    <span t-field="o.no_bultos"/>
                                </div>
                                <div class="col-3 ">
                                    <strong>Deposito:</strong>
                                    <p>Nombre del deposito
                                        <br/>
                                        Calle y numero
                                        <br/>
                                        Entre calle
                                        <br/>
                                        <br/>
                                        <strong>Código: 1842</strong>
                                        <br/>
                                        <strong>Código Depositante:</strong>
                                        <p>00000000000</p>
                                    </p>
                                </div>
                                <div class="col-3  pe-2">
                                    <strong>Proveedor:</strong>
                                    <p>
                                        <strong>Nombre del proveedor</strong>
                                        <br/>
                                        Calle
                                        <br/>
                                        Ciudad
                                        <br/>
                                        Pais
                                        <br/>
                                        Tel.00000000000
                                            0000000000
                                        <br/>
                                        email: ventas@dominio.cu
                                    </p>
                                </div>
                                <div class="col-3  me-2">
                                    <strong>Importador:</strong>
                                    <p t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;,
                                        &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;],
                                        &quot;no_marker&quot;: True}"/>
                                    <br/>
                                    <strong>Forma de Pago:</strong>
                                    <p t-field="o.payment_id.payment_method_id.name"/>
                                    <strong>Condiciones de Compra:</strong>
                                    <p t-field="o.invoice_incoterm_id.code"/>
                                </div>
                            </div>
                            <div class="row mt32 mb32">
                                <div class="col-xs-12">
                                    <p>
                                        <strong>Cuenta Bancaria:</strong>
                                        Banco Nombre 0000 0000 0000 0000 0000
                                    </p>
                                    <!--<p t-field="company.report_footer"/>-->
                                </div>
                            </div>


                            <!-- Is there a discount on at least one line? -->
                            <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                            <table class="table table-striped" name="invoice_line_table">
                                <thead>
                                    <tr class="border-black" style="border-top:1px solid #dddddd;">
                                        <th class="text-center">No</th>
                                        <th class="text-center">Partida Arancel</th>
                                        <th class="text-center">Código</th>
                                        <th class="text-center">Descripción del Producto</th>
                                        <th class="text-right">Bultos</th>
                                        <th class="text-right">P/N(Kg)</th>
                                        <th class="text-right">P/B(Kg)</th>
                                        <th class="text-right">UM</th>
                                        <th class="text-right">Cantidad</th>
                                        <th class="text-right">Precio Unitario</th>
                                        <th class="text-right">Importe</th>
                                        <th class="text-right">Origen</th>
                                    </tr>
                                   
                                </thead>
                                <tbody class="invoice_tbody">
                                    <t t-set="var_num_line" t-value="0"/>
                                    <tr t-foreach="o.invoice_line_ids" t-as="l">
                                        <td class="text-center">
                                            <t t-set="var_num_line" t-value="var_num_line + 1"/>
                                            <span class="text-right">
                                                <t t-esc="var_num_line"/>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="l.product_arancel_id"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="l.product_id.default_code"/>
                                        </td>
                                        <td class="text-center">
                                            <!--<span t-field="l.product_id.product_tmpl_id.name"/>-->
                                            <span t-field="l.name"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.bultos"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.net_weight"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.weight"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.product_uom_id"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.quantity"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="l.price_unit/Tasa" t-options='{"widget": "float", "precision": 2}'/>
                                        </td>
                                        <td class="text-right" id="subtotal">
                                            <span t-esc="l.price_subtotal/Tasa" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.origen"/>
                                        </td>
                                    </tr>
                                    <tr class="border-black" style="border-top:1px solid #dddddd;">
                                        <td/>
                                        <td/>
                                        <td/>
                                        <td class="text-right">
                                            <strong>Totales:</strong>
                                        </td>
                                        <td class="text-right">
                                            <strong>
                                                <span t-field="o.no_bultos"/>
                                            </strong>
                                        </td>
                                        <td class="text-right">
                                            <strong>
                                                <span t-field="o.net_weight_total"/>
                                            </strong>
                                        </td>
                                        <td class="text-right">
                                            <strong>
                                                <span t-field="o.weight_brute_total"/>
                                            </strong>
                                        </td>
                                        <td/>
                                        <td/>
                                        <td/>
                                        <td class="text-right">
                                            <strong>
                                                <span t-esc="o.amount_untaxed/Tasa" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </strong>
                                        </td>
                                        <td/>
                                    </tr>
                                    <tr>                                       
                                        <td/>
                                        <td/>
                                        <td/>
                                       
                                        <td/>
                                         <td class="text-right">
                                            <strong>
                                                <span>Descuento </span>
                                            </strong>
                                            <strong>
                                                <t t-if="o.ks_global_discount_type == 'percent'"><span t-field="o.ks_global_discount_rate"/>%
                                                </t>
                                            </strong>
                                        </td>
                                        <td/>
                                        <td/>
                                        <td/>
                                         <td class="text-right">
                                            <strong>
                                                <span t-esc="o.ks_amount_discount/Tasa" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </strong>
                                        </td>
                                        <td/>
                                        
                                        <td/>
                                       
                                        <td/>
                                    </tr>
                                    <tr>                                        <!--class="border-black" style="border-bottom:1px solid #dddddd;"-->
                                        <td/>
                                        <td/>
                                        <td/>
                                       
                                        <td/>
                                         <td class="text-right">
                                            <strong>Importe Total a Pagar en EUR:</strong>
                                        </td>
                                        <td/>
                                        <td/>
                                        <td/>
                                        <td class="text-right">
                                            <strong>
                                                <span t-esc="o.amount_total/Tasa" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </strong>
                                        </td>
                                        <td/>
                                        <td/>
                                        
                                        <td/>
                                    </tr>
                                    <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                        <td/>
                                        <td/>
                                        <td/>
                                        <td/>
                                        <td/>
                                        <td/>
                                        <td/>
                                        <td/>
                                        <td/>
                                        <td/>
                                        <td/>
                                        <td/>
                                    </tr>

                                </tbody>
                            </table>

                            
                            <p t-if="o.invoice_payment_term_id">
                                <span t-field="o.invoice_payment_term_id.note"/>
                            </p>
                            <p t-if="o.fiscal_position_id.note">
                                <span t-field="o.fiscal_position_id.note"/>
                            </p>
                            <p>
                                <br/>
                                <br/>
                                DECLARAMOS BAJO JURAMENTO QUE LAS PARTIDAS ARANCELARIAS MARCADAS CON UN ASTERISCO (*) EN
                                LA COLUMNA ORIGEN SON LAS QUE TIENEN EL CERTIFICADO QUE AVALA EL MISMO.
                            </p>

                            <table class="table table-bordered" style="border: 2px solid black;">
                                <tr>
                                    <th style="text-align: center; width: 20%; border: 1px solid black;">
                                        <strong/>
                                    </th>
                                    <th style="text-align: center; width: 20%; border: 1px solid black;">
                                        <strong>Nombre</strong>
                                    </th>
                                    <th style="text-align: center; width: 20%; border: 1px solid black;">
                                        <strong>Cargo</strong>
                                    </th>
                                    <th style="text-align: center; width: 20%; border: 1px solid black;">
                                        <strong>Firma</strong>
                                    </th>
                                    <th style="text-align: center; width: 20%; border: 1px solid black;">
                                        <strong>Fecha</strong>
                                    </th>
                                </tr>
                                <tr>
                                    <td style="text-align: left; border: 1px solid black;">
                                        <p class="text-left">
                                            <strong>Confeccionado:
                                                <br/>
                                            </strong>
                                        </p>
                                    </td>
                                    <td style="text-align: left; border: 1px solid black;">Guillermo González Izquierdo</td>
                                    <td style="text-align: left; border: 1px solid black;">Dependiente de Almacén</td>
                                    <td style="text-align: left; border: 1px solid black;"/>
                                    <td style="text-align: left; border: 1px solid black;"/>
                                </tr>
                                <tr>
                                    <td style="text-align: left; border: 1px solid black;">
                                        <p class="text-left">
                                            <strong>Despachado:
                                                <br/>
                                            </strong>
                                        </p>
                                    </td>
                                    <td style="text-align: left; border: 1px solid black;"/>
                                    <td style="text-align: left; border: 1px solid black;"/>
                                    <td style="text-align: left; border: 1px solid black;"/>
                                    <td style="text-align: left; border: 1px solid black;"/>
                                </tr>
                                <tr>
                                    <td style="text-align: left; border: 1px solid black;">
                                        <p class="text-left">
                                            <strong>Transportado:
                                                <br/>
                                            </strong>
                                            Nombre<br/>
                                            CI/LC:<br/>
                                            Chapa:<br/>
                                        </p>
                                    </td>
                                    <td style="text-align: left; border: 1px solid black;"/>
                                    <td style="text-align: left; border: 1px solid black;"/>
                                    <td style="text-align: left; border: 1px solid black;"/>
                                    <td style="text-align: left; border: 1px solid black;"/>

                                </tr>
                                <tr>
                                    <td style="text-align: left; border: 1px solid black;">
                                        <p class="text-left">
                                            <strong>Recibido por:
                                                <br/>
                                            </strong>
                                        </p>
                                    </td>
                                    <td style="text-align: left; border: 1px solid black;"/>
                                    <td style="text-align: left; border: 1px solid black;"/>
                                    <td style="text-align: left; border: 1px solid black;"/>
                                    <td style="text-align: left; border: 1px solid black;"/>
                                </tr>

                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>